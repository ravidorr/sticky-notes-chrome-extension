/* Sticky Notes Dashboard - Standalone Styles */

/* CSS Variables */
:root {
    /* Fonts */
    --font-sans: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;

    /* Colors */
    --c-blue-400: #60a5fa;
    --c-blue-500: #3b82f6;
    --c-blue-600: #2563eb;
    --c-yellow-400: #facc15;
    --c-yellow-500: #eab308;

    /* Light Mode (default) */
    --color-bg: #ffffff;
    --color-bg-secondary: #f8fafc;
    --color-bg-tertiary: #f1f5f9;
    --color-text: #0f172a;
    --color-text-secondary: #475569;
    --color-text-muted: #64748b;
    --color-border: #e2e8f0;
    --card-bg: #ffffff;
    --card-border: #f1f5f9;

    /* Shadows */
    --shadow-2xl: 0 25px 50px -12px rgb(0 0 0 / 0.25);

    /* Border Radius */
    --radius-md: 0.375rem;
    --radius-lg: 0.5rem;
    --radius-xl: 0.75rem;
    --radius-2xl: 1rem;
    --radius-full: 9999px;
}

/* Dark Mode */
@media (prefers-color-scheme: dark) {
    :root {
        --color-bg: #0f172a;
        --color-bg-secondary: #1e293b;
        --color-bg-tertiary: #334155;
        --color-text: #f1f5f9;
        --color-text-secondary: #cbd5e1;
        --color-text-muted: #94a3b8;
        --color-border: #334155;
        --card-bg: #1e293b;
        --card-border: #334155;

        --shadow-2xl: 0 25px 50px -12px rgb(0 0 0 / 0.5);
    }
}

/* Reset */
*,
*::before,
*::after {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
}

body {
    font-family: var(--font-sans);
    color: var(--color-text);
    background-color: var(--color-bg);
    line-height: 1.5;
    -webkit-font-smoothing: antialiased;
}

/* Container */
.container {
    width: 100%;
    max-width: 1024px;
    margin: 0 auto;
    padding: 0 1.5rem;
}

/* Buttons */
.btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.625rem 1.25rem;
    border-radius: var(--radius-lg);
    font-weight: 600;
    font-size: 0.875rem;
    border: none;
    cursor: pointer;
    transition: all 0.2s;
}

.btn-primary {
    background-color: var(--c-blue-500);
    color: white;
}

.btn-primary:hover {
    background-color: var(--c-blue-600);
}

.btn-secondary {
    background-color: var(--color-bg-secondary);
    color: var(--color-text-secondary);
    border: 1px solid var(--color-border);
}

.btn-secondary:hover {
    background-color: var(--color-bg-tertiary);
}

/* Dashboard Page */
.dashboard-page {
    padding: 2rem 0;
    min-height: 100vh;
    background: var(--color-bg);
}

.dashboard-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid var(--color-border);
    flex-wrap: wrap;
    gap: 1rem;
}

.dashboard-header h1 {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-text);
}

.dashboard-header .user-email {
    color: var(--c-blue-500);
    font-weight: 400;
}

.dashboard-controls {
    display: flex;
    gap: 0.75rem;
    align-items: center;
}

.auto-refresh {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: var(--color-text-muted);
    cursor: pointer;
}

.auto-refresh input {
    cursor: pointer;
}

/* API Key Section */
.api-key-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.6);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 100;
    backdrop-filter: blur(4px);
}

.api-key-card {
    background: var(--card-bg);
    border-radius: var(--radius-2xl);
    padding: 2rem;
    max-width: 450px;
    width: 90%;
    box-shadow: var(--shadow-2xl);
    border: 1px solid var(--color-border);
}

.api-key-card h3 {
    margin: 0 0 0.75rem;
    color: var(--color-text);
    font-size: 1.25rem;
}

.api-key-card > p {
    margin: 0 0 1rem;
    color: var(--color-text-secondary);
    font-size: 0.9rem;
}

.api-key-input-container {
    display: flex;
    gap: 0.75rem;
    margin-bottom: 1rem;
}

.api-key-input {
    flex: 1;
    padding: 0.75rem 1rem;
    font-size: 0.9rem;
    font-family: 'SF Mono', Consolas, monospace;
    background-color: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    color: var(--color-text);
    outline: none;
}

.api-key-input:focus {
    border-color: var(--c-blue-500);
}

.api-key-hint {
    font-size: 0.75rem;
    color: var(--color-text-muted);
    margin: 0;
}

/* Stats Dashboard */
.stats-dashboard {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1rem;
    margin-bottom: 1.5rem;
}

@media (max-width: 768px) {
    .stats-dashboard {
        grid-template-columns: repeat(2, 1fr);
    }
}

.stat-card {
    background: var(--card-bg);
    border-radius: var(--radius-xl);
    padding: 1.25rem;
    text-align: center;
    border: 1px solid var(--card-border);
    border-left: 4px solid var(--color-border);
}

.stat-card.stat-total { border-left-color: var(--c-blue-500); }
.stat-card.stat-owned { border-left-color: var(--c-yellow-400); }
.stat-card.stat-shared { border-left-color: var(--c-blue-400); }
.stat-card.stat-domains { border-left-color: #3fb950; }

.stat-value {
    display: block;
    font-size: 2rem;
    font-weight: 700;
    color: var(--color-text);
    line-height: 1.2;
}

.stat-label {
    display: block;
    font-size: 0.75rem;
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-top: 0.25rem;
}

/* Theme Breakdown */
.theme-breakdown {
    background: var(--card-bg);
    border-radius: var(--radius-xl);
    padding: 1rem;
    margin-bottom: 1.5rem;
    border: 1px solid var(--card-border);
}

.theme-bar {
    display: flex;
    height: 8px;
    border-radius: var(--radius-full);
    overflow: hidden;
    background: var(--color-bg-secondary);
    margin-bottom: 0.75rem;
}

.theme-segment {
    transition: flex 0.3s ease;
}

.theme-segment.theme-yellow { background-color: var(--c-yellow-400); }
.theme-segment.theme-blue { background-color: var(--c-blue-400); }
.theme-segment.theme-green { background-color: #3fb950; }
.theme-segment.theme-pink { background-color: #f778ba; }

.theme-legend {
    display: flex;
    justify-content: center;
    gap: 1rem;
    font-size: 0.875rem;
    font-weight: 500;
}

.legend-count.yellow { color: var(--c-yellow-500); }
.legend-count.blue { color: var(--c-blue-500); }
.legend-count.green { color: #3fb950; }
.legend-count.pink { color: #f778ba; }

/* Filter Tabs */
.filter-tabs {
    display: flex;
    gap: 0.25rem;
    margin-bottom: 1rem;
    background: var(--color-bg-secondary);
    border-radius: var(--radius-xl);
    padding: 0.25rem;
}

.filter-tab {
    flex: 1;
    padding: 0.625rem 1rem;
    font-size: 0.875rem;
    font-weight: 500;
    background: none;
    border: none;
    border-radius: var(--radius-lg);
    color: var(--color-text-muted);
    cursor: pointer;
    transition: all 0.2s;
}

.filter-tab:hover {
    color: var(--color-text-secondary);
    background: var(--color-bg-tertiary);
}

.filter-tab.active {
    background: var(--c-blue-500);
    color: white;
}

/* URL Input */
.url-input-container {
    display: flex;
    gap: 0.75rem;
    margin-bottom: 1rem;
}

@media (max-width: 600px) {
    .url-input-container {
        flex-direction: column;
    }
    
    .domain-select, .url-input, .url-input-container .btn {
        width: 100%;
    }
}

.url-input, .domain-select {
    padding: 0.625rem 1rem;
    font-size: 0.9rem;
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    color: var(--color-text);
    outline: none;
    transition: border-color 0.2s;
}

.url-input:focus, .domain-select:focus {
    border-color: var(--c-blue-500);
}

.url-input::placeholder {
    color: var(--color-text-muted);
}

.domain-select {
    min-width: 180px;
    cursor: pointer;
}

.domain-select option {
    background: var(--color-bg-secondary);
    color: var(--color-text);
}

.url-input {
    flex: 1;
}

/* Status */
.dashboard-page .status {
    padding: 0.625rem 1rem;
    margin-bottom: 1rem;
    border-radius: var(--radius-lg);
    font-size: 0.875rem;
    min-height: 2.5rem;
}

.dashboard-page .status-loading {
    background: rgba(59, 130, 246, 0.1);
    color: var(--c-blue-500);
}

.dashboard-page .status-success {
    background: rgba(63, 185, 80, 0.1);
    color: #3fb950;
}

.dashboard-page .status-error {
    background: rgba(248, 81, 73, 0.1);
    color: #f85149;
}

/* Notes List */
.notes-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.empty-state-msg {
    text-align: center;
    padding: 3rem 1.5rem;
    color: var(--color-text-muted);
    font-style: italic;
}

/* Note Card */
.note-card {
    background: var(--card-bg);
    border-radius: var(--radius-xl);
    padding: 1.25rem;
    border: 1px solid var(--card-border);
    border-left: 4px solid var(--color-border);
}

.note-card.theme-yellow { border-left-color: var(--c-yellow-400); }
.note-card.theme-blue { border-left-color: var(--c-blue-400); }
.note-card.theme-green { border-left-color: #3fb950; }
.note-card.theme-pink { border-left-color: #f778ba; }

.note-card .note-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.5rem;
    flex-wrap: wrap;
    background: none;
    padding: 0;
    border: none;
    cursor: default;
}

.note-badge {
    padding: 0.125rem 0.5rem;
    border-radius: var(--radius-md);
    font-size: 0.7rem;
    font-weight: 500;
    background: rgba(59, 130, 246, 0.15);
    color: var(--c-blue-500);
    max-width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.note-selector {
    font-family: 'SF Mono', Consolas, monospace;
    font-size: 0.75rem;
    background: var(--color-bg-secondary);
    padding: 0.2rem 0.5rem;
    border-radius: var(--radius-md);
    color: var(--color-text-muted);
    max-width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.note-url-row {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.75rem;
}

.note-url-link {
    flex: 1;
    font-size: 0.75rem;
    color: var(--c-blue-500);
    text-decoration: none;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    transition: color 0.2s;
}

.note-url-link:hover {
    color: var(--c-blue-400);
    text-decoration: underline;
}

.btn-open {
    padding: 0.25rem 0.625rem;
    font-size: 0.7rem;
    font-weight: 500;
    background: var(--c-blue-500);
    color: white;
    text-decoration: none;
    border-radius: var(--radius-md);
    transition: background-color 0.2s;
    flex-shrink: 0;
}

.btn-open:hover {
    background: var(--c-blue-600);
}

.note-content-box {
    padding: 0.875rem;
    background: var(--color-bg-secondary);
    border-radius: var(--radius-lg);
    margin-bottom: 0.75rem;
    font-size: 0.9rem;
    line-height: 1.6;
    overflow-wrap: break-word;
    color: var(--color-text);
}

.note-content-box .no-content {
    color: var(--color-text-muted);
}

/* Comments Section */
.note-comments {
    margin-top: 0.875rem;
    padding-top: 0.875rem;
    border-top: 1px solid var(--color-border);
}

.comments-header {
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 0.5rem;
}

.comment {
    background: var(--color-bg-secondary);
    border-radius: var(--radius-lg);
    padding: 0.75rem;
    margin-bottom: 0.5rem;
}

.comment-reply {
    margin-left: 1.25rem;
    border-left: 2px solid var(--color-border);
}

.comment-author {
    font-weight: 600;
    color: var(--c-blue-500);
    font-size: 0.8rem;
}

.comment-date {
    font-size: 0.7rem;
    color: var(--color-text-muted);
    margin-left: 0.5rem;
}

.comment-content {
    margin-top: 0.25rem;
    font-size: 0.85rem;
    color: var(--color-text-secondary);
    line-height: 1.4;
}

.note-card .note-footer {
    display: flex;
    justify-content: space-between;
    font-size: 0.75rem;
    color: var(--color-text-muted);
    padding: 0;
    border: none;
    margin: 0;
}

.note-id {
    font-family: 'SF Mono', Consolas, monospace;
    color: var(--color-text-muted);
    opacity: 0.7;
}

/* Dashboard Footer */
.dashboard-footer {
    margin-top: 2rem;
    padding-top: 1rem;
    border-top: 1px solid var(--color-border);
    text-align: center;
}

.key-indicator {
    font-family: 'SF Mono', Consolas, monospace;
    font-size: 0.75rem;
    color: var(--color-text-muted);
    background: var(--color-bg-secondary);
    padding: 0.25rem 0.5rem;
    border-radius: var(--radius-md);
}
