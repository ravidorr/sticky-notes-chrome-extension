{
  "name": "sticky-notes-chrome-extension",
  "version": "1.9.0",
  "description": "Element-anchored sticky notes for annotating any website",
  "type": "module",
  "scripts": {
    "dev": "node scripts/build.js --development && vite build --watch",
    "build": "node scripts/build.js && node scripts/build.js --browser=edge",
    "build:chrome": "node scripts/build.js",
    "build:edge": "node scripts/build.js --browser=edge",
    "build:dev": "node scripts/build.js --development && node scripts/build.js --browser=edge --development",
    "build:dev:chrome": "node scripts/build.js --development",
    "build:dev:edge": "node scripts/build.js --browser=edge --development",
    "build:site": "node scripts/build-site.js",
    "preview": "vite preview",
    "serve:test": "npx serve tests/fixtures -l 3000",
    "lint": "npm run lint:js && npm run lint:css && npm run lint:html && npm run lint:md",
    "lint:js": "eslint src/",
    "lint:js:fix": "eslint src/ --fix",
    "lint:css": "stylelint \"site/**/*.css\" \"src/**/*.css\"",
    "lint:css:fix": "stylelint \"site/**/*.css\" \"src/**/*.css\" --fix",
    "lint:html": "htmlhint --rulesdir ./scripts/htmlhint-rules \"site/templates/*.html\" \"site/partials/*.html\" \"src/**/*.html\" \"public/**/*.html\"",
    "lint:md": "markdownlint-cli2 \"**/*.md\" \"#node_modules\" \"#**/node_modules\" && node scripts/lint-md-extra.js",
    "lint:md:fix": "markdownlint-cli2 --fix \"**/*.md\" \"#node_modules\" \"#**/node_modules\"",
    "lint:fix": "npm run lint:js:fix && npm run lint:css:fix && npm run lint:md:fix",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:e2e": "playwright test",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ravidorr/sticky-notes-chrome-extension.git"
  },
  "keywords": [
    "chrome-extension",
    "sticky-notes",
    "annotation",
    "web-extension"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ravidorr/sticky-notes-chrome-extension/issues"
  },
  "homepage": "https://github.com/ravidorr/sticky-notes-chrome-extension#readme",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@jest/globals": "^29.7.0",
    "@playwright/test": "^1.52.0",
    "archiver": "^7.0.1",
    "clean-css": "^5.3.3",
    "eslint": "^9.39.2",
    "eslint-plugin-no-em-dash": "^1.0.0",
    "eslint-plugin-no-emoji": "^2.0.2",
    "firebase-admin": "^13.6.0",
    "globals": "^17.0.0",
    "htmlhint": "^1.8.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^16.2.7",
    "markdownlint-cli2": "^0.20.0",
    "markdownlint-rule-search-replace": "^1.2.0",
    "serve": "^14.2.4",
    "stylelint": "^16.26.1",
    "stylelint-config-standard": "^39.0.1",
    "terser": "^5.46.0",
    "vite": "^6.0.0 || ^7.0.0"
  },
  "dependencies": {
    "firebase": "^12.7.0"
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix"
    ],
    "site/**/*.js": [
      "eslint --fix"
    ],
    "site/**/*.css": [
      "stylelint --fix"
    ],
    "src/**/*.css": [
      "stylelint --fix"
    ],
    "site/templates/*.html": [
      "htmlhint"
    ],
    "site/partials/*.html": [
      "htmlhint"
    ],
    "public/**/*.html": [
      "htmlhint"
    ],
    "**/*.md": [
      "markdownlint-cli2",
      "node scripts/lint-md-extra.js"
    ]
  }
}
