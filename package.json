{
  "name": "sticky-notes-chrome-extension",
  "version": "1.0.0",
  "description": "Element-anchored sticky notes for annotating any website",
  "type": "module",
  "scripts": {
    "dev": "node scripts/build.js && vite build --watch",
    "build": "node scripts/build.js",
    "preview": "vite preview",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:e2e": "playwright test",
    "generate:icons": "node scripts/generate-icons.js",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ravidorr/sticky-notes-chrome-extension.git"
  },
  "keywords": [
    "chrome-extension",
    "sticky-notes",
    "annotation",
    "web-extension"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ravidorr/sticky-notes-chrome-extension/issues"
  },
  "homepage": "https://github.com/ravidorr/sticky-notes-chrome-extension#readme",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@jest/globals": "^29.7.0",
    "@playwright/test": "^1.52.0",
    "eslint": "^9.39.2",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^16.2.7",
    "serve": "^14.2.4",
    "vite": "^6.0.0 || ^7.0.0"
  },
  "dependencies": {
    "firebase": "^12.7.0"
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix"
    ]
  }
}
